{
  "name": "icpnomad",
  "version": "1.0.0",
  "description": "Blockchain-based wallet application for USSD access to ICP assets",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/backend/index.ts",
    "build": "tsc",
    "build:backend": "tsc && cp -r src/backend/public dist/ 2>/dev/null || true",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "mock-ussd": "node dist/ussd/mock-cli.js",
    "dfx:start": "dfx start --background",
    "dfx:stop": "dfx stop",
    "dfx:deploy": "dfx deploy",
    "dfx:deploy:local": "dfx deploy --network local",
    "dfx:deploy:ic": "dfx deploy --network ic",
    "setup": "npm install && dfx start --background && dfx deploy"
  },
  "keywords": [
    "blockchain",
    "icp",
    "internet-computer",
    "ussd",
    "wallet",
    "cryptocurrency",
    "financial-inclusion",
    "motoko"
  ],
  "author": "ICPNomad Team",
  "license": "MIT",
  "dependencies": {
    "@dfinity/agent": "^0.20.0",
    "@dfinity/auth-client": "^0.20.0",
    "@dfinity/candid": "^0.20.0",
    "@dfinity/identity": "^0.20.0",
    "@dfinity/principal": "^0.20.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.10.0",
    "joi": "^17.9.2",
    "mongoose": "^7.4.0",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.4.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}